@using HM.Core.Models
@model IEnumerable<UserListViewModel>
@{
    ViewData["Title"] = "Manage users";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Registered users</h3>
                <div class="card-tools">
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>
                                    <a asp-area="Admin" asp-action="Save" asp-controller="User" asp-route-id="@user.Id" class="btn btn-app">
                                        <i class="fas fa-save"></i> Save
                                    </a>
                                    <a asp-area="Admin" asp-action="Edit" asp-controller="User" asp-route-id="@user.Id" class="btn btn-app">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-area="Admin" asp-action="Roles" asp-controller="User" asp-route-id="@user.Id" class="btn btn-app">
                                        <i class="fas fa-user"></i> Roles
                                    </a>               
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>