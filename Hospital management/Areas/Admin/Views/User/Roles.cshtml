@using HM.Core.Models
@model UserRolesViewModel
@{
    ViewData["Title"] = "Roles";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-4">
        <div class="form-group">
            <form id="roles" method="post">
                <input type="hidden" name="UserId" value="@Model.UserId" />
                <input type="hidden" name="Name" value="@Model.Name" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating">
                    <h3>Selected user: @Html.DisplayFor(m => m.Name)</h3>
                </div>
                <div class="form-group">
                    <label>Select roles:</label>
                    <select asp-for="RoleNames" asp-items="@items" class="js-example-basic-multiple form-control" multiple="multiple" data-placeholder="Roles" style="width: 100%;" aria-hidden="true"></select>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
            $(document).ready(function() {
        $('.js-example-basic-multiple').select2();
    });
</script>
}
