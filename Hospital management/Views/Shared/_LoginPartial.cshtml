@using HM.Infrastructure.Data.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManage


@if (SignInManager.IsSignedIn(User))
{
    <aside class="control-sidebar control-sidebar-dark">
        <div class="p-3">
        <h5>Profile</h5>
        <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2 profile-user-img sidebar-profile-pic" alt="User Image">
            <div class="user-panel mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">@User.Identity?.Name</a>
                </div>  
            </div>

            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </div>
    </aside>
}
