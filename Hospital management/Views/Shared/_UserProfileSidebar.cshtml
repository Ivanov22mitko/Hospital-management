@using HM.Core.Constants
<aside class="control-sidebar control-sidebar-dark">
    <div class="p-3">
        <h5>Profile</h5>
        <img gravatar-email="@User.Identity?.Name" gravatar-size="80" class="img-circle elevation-2 profile-user-img sidebar-profile-pic" alt="My Gravatar" />
        <div class="user-panel mb-3 d-flex">
            <div class="info">
                <a href="#" class="d-block">@User.Identity?.Name</a>
            </div>
        </div>

        @if (User.IsInRole(UserConstants.Roles.Administrator))
        {
            <div class="btn-block">
                <a asp-area="Admin" asp-page="/Admin" title="Manage">Admin</a>
            </div>
        }

        <div class="btn-block">
            <a asp-area="Identity" asp-page="/Manage/Index" title="Manage">Settings</a>
        </div>
        
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link">Logout</button>
        </form>

    </div>
</aside>

